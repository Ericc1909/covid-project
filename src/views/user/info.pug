extends ../templates/user-info.template.pug

block title
  title Covid Project | Thông tin tài khoản

block append style
  style.
    span.label {
      color: var(--dark);
      font-weight: 500;
      text-transform: capitalize;
    }
    .account-info p {
      font-size: 1.15rem;
      letter-spacing: 0.5px;
    }

block addContent
  h1.user-info-title Thông tin tài khoản
  .account-info
    - const { peopleId, username, fullname, DOB, statusF, createdAt, address, manager } = userInfo
    p #[span.label Họ tên:] #[span= fullname]
    p #[span.label username:] #[span= username]
    p #[span.label CMND/CCCD:] #[span= peopleId]
    p #[span.label Ngày sinh:] #[span= helpers.formatDateToStr(DOB)]
    p #[span.label Địa chỉ:] #[span= address]
    p #[span.label username người quản lý:] #[span=manager]
    p #[span.label Trạng thái bệnh:] #[span= helpers.convertStatusFToStr(statusF)]
